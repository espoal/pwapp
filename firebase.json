{
  "emulators": {
    "hosting": {
      "host": "0.0.0.0",
      "port": 5000
    }
  },
  "hosting": {
    "public": "dist/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/dash",
        "destination": "ssr/dash/index.html"
      },
      {
        "source": "/auth/login",
        "destination": "ssr/auth/login/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
